#include <stdio.h>
#include<conio.h>
#include<stdlib.h>
#define MAX 5
int stack[MAX];//global declaration
int top=-1;
void push(int val){
    if(top==MAX-1){
        printf("\n stack overflow");
    }
    else{
        top ++;
        stack[top]=val;
    }
}
int pop(){
    int val;
    if(top==-1){
        printf("\n stack empty");
        return -1;
    }
    else{
        val=stack[top];
        top--;
        return val;
    }
}
void display(){
    int i;
        for(i=top;i>=0;i--){
        printf("\n %d",stack[i]);
    }
}
    
int peek(){
    if(top==-1){
        printf("\n stack empty");
        return -1;
    }
    else{
        return stack[top];
    }
}
void main()
{
  int ch=0,val;
  while(ch!=5){
    printf("\nEnter your choice 1-push 2-pop 3-peek 4-display 5-exit\t");
    scanf("%d",&ch);
    switch(ch){
        case 1:
              printf("Enter value to push: ");
              scanf("%d", &val);
              push(val);
              break;
        case 2:
              val = pop();
              printf("Popped value = %d", val);
              break;
        case 3:
              val = peek();
              printf("\nTop value = %d", val);
              break;
        case 4: 
              display();
              break;
        case 5:
              exit(0);
              break;
        default: 
        printf("invalid choice");
    }
}
}
