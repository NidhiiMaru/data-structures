#include <stdio.h>
#include<conio.h>
#include<stdlib.h>
#define MAX 5
int stack[MAX];
int top=-1;
void push(int stack[],int val){
    if(top==MAX-1){
        printf("\n stack overflow");
    }
    else{
        top ++;
        stack[top]=val;
    }
}
int pop(int stack[]){
    int val;
    if(top==-1){
        printf("\n stack empty");
        return -1;
    }
    else{
        val=stack[top];
        top--;
        return val;
    }
}
void display(int stack[]){
    int i;
    if(top==-1){
        printf("\n stack empty");
    }
    else{
        for(i=top;i>=0;i--){
            printf("\n %d",stack[i]);
        }
    }
}
    
int peek(int stack[]){
    if(top==-1){
        printf("\n stack empty");
        return -1;
    }
    else{
        return stack[top];
    }
}
void main()
{
  int ch=0,val;
  while(ch!=5){
    printf("\nEnter your choice 1-push 2-pop 3-peek 4-display 5-exit\t");
    scanf("%d",&ch);
    switch(ch){
        case 1:
              printf("Enter value to push: ");
              scanf("%d", &val);
              push(stack, val);
              break;
        case 2:
              val = pop(stack);
              if (val != -1)
              printf("Popped value = %d", val);
              break;
        case 3:
              val = peek(stack);
              if (val != -1)
              printf("\nTop value = %d", val);
              break;
        case 4: 
              display(stack);
              break;
        case 5:
              exit(0);
              break;
        default: 
        printf("invalid choice");
    }
}
}
